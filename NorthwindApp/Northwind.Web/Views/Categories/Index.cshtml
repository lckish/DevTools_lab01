@model IEnumerable<CategoryViewModel>

    @{
        ViewData["Title"] = "Категории";
    }

    <h1>Категории</h1>

    <p>
        <a asp-action="Create">Добавить новую</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Picture)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-tid="category-row-@item.CategoryId">
                    <td data-tid="category-name">
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td data-tid="category-description">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td data-tid="category-product-list">
                        @{
                            if (item.Products.Count != 0)
                            {
                                <p>Продукты (@item.Products.Count()):</p>
                                foreach (var product in item.Products.Take(3))
                                {
                                    <p data-tid="product-name">
                                        @Html.DisplayFor(productName => product.ProductName)
                                    </p>
                                }
                            }
                            else
                            {
                                <p>Нет продуктов</p>
                            }
                        }
                    </td>
                    <td data-tid="category-picture">
                        <img src="@Url.Action("Image", new { Id = item.CategoryId })" width="100" />
                    </td>
                    <td data-tid="category-row-actions">
                        <a asp-action="Edit" asp-route-id="@item.CategoryId">Редактировать</a><br />
                        <a asp-action="Details" asp-route-id="@item.CategoryId">Детали</a> <br />
                        <a asp-action="Delete" asp-route-id="@item.CategoryId">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
