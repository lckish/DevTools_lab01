@model CategoryViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить эту категорию?</h3>
<div>
    <h4>Категория "@Model.CategoryName"</h4>
    <hr />
    <dl data-tid="category-card" class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd data-tid="category-name" class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd data-tid="category-description" class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd data-tid="category-picture" class="col-sm-10">
            <img src="@Url.Action("Image", new { Id = Model.CategoryId })" width="100" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>

<div data-tid="category-product-list">
    @{
        if (Model != null)
        {
            if (Model.Products.Count != 0)
            {
                <p>Продукты (@Model.Products.Count()):</p>
                foreach (var product in Model.Products)
                {
                    <p data-tid="product-name">
                        @Html.DisplayFor(productName => product.ProductName)
                    </p>
                }
            }
            else
            {
                <p>Нет продуктов</p>
            }
        }
    }
</div>